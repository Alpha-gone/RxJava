<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="volley"
            type="com.example.rxandroid.restApi.VolleyActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context = ".restApi.VolleyActivity">

        <Button
            android:id="@+id/btnGet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET defer::just"/>

        <Button
            android:id="@+id/btnGet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET fromCallable"/>

        <Button
            android:id="@+id/btnGet3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GET fromFuture"/>

        <ListView
            android:id="@+id/lvLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp" />
    </LinearLayout>
</layout>

